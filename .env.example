# ===========================================
# IntervoxAI Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# -------------------------------------------
# Firebase Client SDK (Public - exposed to browser)
# -------------------------------------------
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# -------------------------------------------
# Firebase Admin SDK (Private - server-side only)
# -------------------------------------------
# Get these from Firebase Console > Project Settings > Service Accounts
# Download the private key JSON and extract these values
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# Note: The private key must include literal \n characters for newlines
# Example: "-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# -------------------------------------------
# Google AI / Gemini API
# -------------------------------------------
# Get your API key from https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key

# -------------------------------------------
# Resume Encryption (Recommended for production)
# -------------------------------------------
# 32-byte key encoded as base64/base64url (or 64-char hex fallback)
# Example command to generate base64 key:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
RESUME_ENCRYPTION_KEY=your_base64_32_byte_key

# -------------------------------------------
# Brandfetch (Public client id for CDN logos)
# -------------------------------------------
# Get this from Brandfetch dashboard/API settings.
# This value is public and used in client-side image URLs.
NEXT_PUBLIC_BRANDFETCH_CLIENT_ID=your_brandfetch_client_id

# -------------------------------------------
# Application Settings (Optional)
# -------------------------------------------
# NODE_ENV is automatically set by Next.js
NEXT_PUBLIC_APP_URL=https://your-domain.com

# -------------------------------------------
# Upstash Redis (for production rate limiting)
# -------------------------------------------
# Get these from Upstash Console > Redis > Your Database > REST API
# If not set, falls back to in-memory rate limiting (not suitable for horizontal scaling)
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token
